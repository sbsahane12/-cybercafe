<style>
    header {
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      position: sticky;
      top: 0;
      z-index: 50;
    }
    
    nav {
      background-color: white;
      border-bottom: 1px solid #e2e8f0;
      padding: 10px 20px;
    }
    
    .nav-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      max-width: 1200px;
      margin: 0 auto;
    }
    
    .logo-link {
      display: flex;
      align-items: center;
    }
    
    .logo-img {
      height: 48px;
      margin-right: 12px;
    }
    
    .logo-img:hover {
      height: 48px;
      margin-right: 12px;
     transform: scale(1.1);
    }
    
    
    .nav-toggle {
      display: flex;
      flex-direction: column;
      gap: 4px;
      order: 3;
      cursor: pointer;
    }
    
    .nav-toggle-bar {
      width: 24px;
      height: 3px;
      background-color: #4a5568;
      transition: transform 0.3s;
    }
    
    .nav-menu {
      display: none;
      order: 4;
      width: 100%;
    }
    
    .nav-menu.open {
      display: block;
    }
    
    .nav-list {
      list-style: none;
      padding: 0;
      margin: 16px 0 0;
      font-weight: 500;
    }
    
    .nav-link {
      display: block;
      padding: 8px 12px;
      color: #4a5568;
      text-decoration: none;
      border-bottom: 1px solid #e2e8f0;
      transition: background-color 0.2s, color 0.2s;
      
    }
    
    .nav-link:hover {
     
      transform: scale(1.2);
    transition:cubic-bezier(0.075, 0.82, 0.165, 1) .5s; 
      color: #c05621;
      text-decoration: underline ;
    }
    
    @media (min-width: 768px) {
      .nav-toggle {
        display: none;
      }
    
      .nav-menu {
        display: block;
        order: 1;
        width: auto;
      }
    
      .nav-list {
        display: flex;
        margin-top: 10px;
        gap: 50px;
      }
    
      .nav-list1 {
        display: flex;
        margin-top: 0px;
        gap: 34px;
      }
      .nav-link {
        padding: 0;
        border-bottom: none;
      }
    }
  </style>
<header>


<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
    <div class="container-fluid">
      
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse " id="navbarNavAltMarkup">
            <div class="nav-list">
            <a href="/services" class="nav">
              <img
                src="https://alexharkness.com/wp-content/uploads/2020/06/logo-2.png"
                class="logo-img"
                alt="Logo"
              />
            </a>
            <a class="nav-link" href="/services">Home</a>
                <a class="nav-link active" href="/services">All Services</a>
                <a class="nav-link" href="/contact">Contact me</a>
              </div>
            <div class="ms-auto nav-list1">
                 <% if (user ) { %>
                  <a class="nav-link" href="/user/profile/<%= user._id %>"><i class="fas fa-user"></i> Profile</a>
                  <a class="nav-link" href="/user/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                 <% }
                 else { %>
                  <a class="nav-link" href="/user/login"><i class="fas fa-sign-in-alt"></i> Login</a>
                  <a class="nav-link" href="/user/signup"><i class="fas fa-user-plus"></i> Signup</a>
                 <% } %>
                  
                 
    
               
              </div>
        </div>
    </div>
</nav>
</header>