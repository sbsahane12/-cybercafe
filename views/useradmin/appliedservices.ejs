<% layout("/layouts/adminboilerplate") %>

<div class="container mx-auto">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-2xl font-weight-bold">Service List</h1>
        <div class="d-flex align-items-center">
            <button class="btn btn-primary mr-2">Add New +</button>
            <input type="search" id="searchInput" placeholder="Search..." class="form-control">
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="serviceTable" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th><input type="checkbox"></th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><input type="checkbox"></td>
                                <td><img src="<%= user.avatar %>" alt="<%= user.name %>" class="rounded-circle" style="width: 40px; height: 40px"></td>
                                <td><%= user.username %></td>
                                <td><%= user.role %></td>
                                <td>Active</td>
                                <td>
                                    <a href="/admin/users/<%= user._id %>" class="btn btn-sm btn-primary mr-2">view profiles</a>
                                    <form action="/admin/users/<%= user._id %>?_method=delete" method="post" style="display: inline;">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const searchInput = document.getElementById("searchInput");
        const serviceTable = document.getElementById("serviceTable");
        const rows = serviceTable.getElementsByTagName("tr");

        searchInput.addEventListener("input", function () {
            const filter = searchInput.value.toLowerCase();
            for (let i = 1; i < rows.length; i++) {
                const name = rows[i].getElementsByTagName("td")[2].innerText.toLowerCase();
                if (name.includes(filter)) {
                    rows[i].style.display = "";
                } else {
                    rows[i].style.display = "none";
                }
            }
        });
    });
</script>
