<% layout("/layouts/adminboilerplate") %>
<style>
    input[type="search"] {
        width: 100%;
    padding: 0.5rem;
    margin-bottom: 0.5rem;
    border: 2px solid #f37a05; /* Adjust the border color as needed */
    border-radius: 0.375rem;
    }
</style>

<div class="container mx-auto">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-2xl font-weight-bold">User List</h1>
        <div class="d-flex align-items-center">
           <input type="search" id="searchInput" style="width: 300px" placeholder="Search..." class="form-control"> 
        </div>
      
        
        <div class="d-flex align-items-center">
            <a href="/admin/users/adduser" class="btn btn-primary " style="height: 36px ; width: 100px;">Add</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="serviceTable" class="table table-striped table-hover">
                    <thead>
                        <tr>
                           
                            <th>Image</th>
                            <th>Name</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                
                                <td><img src="<%= user.avatar %>" alt="<%= user.name %>" class="rounded-circle" style="width: 40px; height: 40px"></td>
                                <td><%= user.username %></td>
                                <td><%= user.role %></td>
                                <td>Active</td>
                                <td>
                                    <a href="/admin/users/<%= user._id %>/edit" class="btn btn-sm btn-primary mr-2">Edit</a>
                                    <form action="/admin/users/<%= user._id %>?_method=delete" method="post" style="display: inline;">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                    <a href="/admin/users/<%= user._id %>/applications" class="btn btn-sm btn-primary">View Applications</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const searchInput = document.getElementById("searchInput");
        const serviceTable = document.getElementById("serviceTable");
        const rows = serviceTable.getElementsByTagName("tr");

        searchInput.addEventListener("input", function () {
            const filter = searchInput.value.toLowerCase();
            for (let i = 1; i < rows.length; i++) {
                const name = rows[i].getElementsByTagName("td")[1].innerText.toLowerCase();
                if (name.includes(filter)) {
                    rows[i].style.display = "";
                } else {
                    rows[i].style.display = "none";
                }
            }
        });
    });
</script>
